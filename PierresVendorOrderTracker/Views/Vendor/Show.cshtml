@using PierresVendorOrderTracker.Models;



<h3>Here are all orders for this vendor</h3>

@if (@Model["vendor"].VendorOrders.Count == 0)
{
  <h3>You have not made any orders!</h3>
}

<ol>
@foreach (Order order in @Model["order"])
{
  <li>
    <a href='/vendors/@Model["vendor"].Id/orders/@order.Id'><strong>@order.Title</strong></a><br>
      <ul>
        <li>@order.Description</li>
      </ul>
  </li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Home</a></p>